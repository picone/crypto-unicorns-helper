{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": false,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "strict": true,
      "pretty": true,
      "paths": {
        "@/*": [
          "./src/*"
        ]
      },
      "types": [
        "chrome"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "node_modules/element-plus/**/*.type.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }