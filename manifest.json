{
    "manifest_version": 3,
    "name": "Crypto Unicorns Helper",
    "description": "A helper of the game Crypto Unicorns.",
    "version": "1.0.2",
    "action": {
        "default_popup": "events.html",
        "default_icon": "imgs/icon.png"
    },
    "icons": {
        "128": "imgs/icon.png"
    },
    "permissions": [
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "https://game.cryptounicorns.fun/*"
    ],
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://game.cryptounicorns.fun/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "https://game.cryptounicorns.fun/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}
